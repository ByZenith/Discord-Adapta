 */
// Accent Color
accent-color ?= #0EA1B6
// Background Color for Dark Theme
dark-base ?= #273239
// Background Color for Light Theme (not yet implemented)
light-base ?= #FFFFFF
// Background Color for Headers
header-bg ?= #13191C
// If set to true, headers will be slightly small. This does not work quite well on Windows.
small-headers ?= false
// If set to true, when the window is <720px in size, only the chat section will be visible.
responsive ?= true

bg-image ?= no-repeat

// Dark Theme
@require '../styles/dark'

// Tooltips
.tooltip {
  background-color: accent-color!important

  &.tooltip-left::after {
    border-left-color: accent-color
  }
  &.tooltip-right::after {
    border-right-color: accent-color
  }
  &.tooltip-top::after {
    border-top-color: accent-color
  }
  &.tooltip-bottom::after {
    border-bottom-color: accent-color
  }
}
